pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                sh 'docker build -t mohamedswelam/nti:200 .'
            }

        }
        stage('login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'docker push mohamedswelam/nti:200'
                }
            }

        }
    }
}
